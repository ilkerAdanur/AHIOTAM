@model CreateGalleryDto

@{
    ViewData["Title"] = "CreateGallery";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="flex flex-wrap -mx-3">
    <div class="flex-none w-full max-w-full px-3">
        <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 shadow-xl dark:bg-slate-850 dark:shadow-dark-xl rounded-2xl bg-clip-border">
            <div class="p-6 pb-0 mb-0 border-b-0 border-b-solid rounded-t-2xl border-b-transparent">
                <h6 class="dark:text-white text-lg font-semibold">Görsel Ekle</h6>
            </div>
            <div class="flex-auto p-6">
                <form asp-action="CreateGallery" asp-controller="Gallery" method="post" enctype="multipart/form-data" class="space-y-4">

                    <!-- Görsel Yükleme -->
                    <div>
                        <label asp-for="ImageFile" class="block mb-2 text-sm font-medium text-slate-700 dark:text-white">Görsel Seç</label>
                        <input asp-for="ImageFile" type="file" accept="image/*"
                               class="w-full px-3 py-2 border rounded-lg shadow-sm dark:bg-slate-800 dark:text-white" />
                        <span asp-validation-for="ImageFile" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Açıklama -->
                    <div>
                        <label asp-for="Description" class="block mb-2 text-sm font-medium text-slate-700 dark:text-white">Açıklama</label>
                        <input asp-for="Description" class="w-full px-3 py-2 border rounded-lg shadow-sm dark:bg-slate-800 dark:text-white" />
                        <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Durum -->
                    <div class="flex justify-end space-x-2 mt-6">
                        <a href="/Gallery/Index" class="px-4 py-2 text-sm font-semibold text-slate-600 dark:text-white border rounded-lg">İptal</a>
                        <button type="submit" class="px-4 py-2 text-sm font-semibold text-white bg-gradient-to-r from-emerald-500 to-teal-400 rounded-lg shadow-md hover:opacity-90">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
