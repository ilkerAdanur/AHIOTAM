@model CreateMenuDto

@{
    ViewData["Title"] = "CreateMenu";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container">
    <div class="flex flex-wrap -mx-3">
        <div class="flex-none w-full max-w-full px-3">
            <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 shadow-xl dark:bg-slate-850 dark:shadow-dark-xl rounded-2xl bg-clip-border">
                <div class="p-6 pb-0 mb-0 border-b-0 border-b-solid rounded-t-2xl border-b-transparent">
                    <h6 class="dark:text-white text-lg font-semibold">Menü Ekle</h6>
                </div>
                <div class="flex-auto p-6">
                    <form asp-action="CreateMenu" asp-controller="Menu" method="post" class="space-y-4">

                        <!-- Menü Adı -->
                        <div>
                            <label asp-for="FoodTitle" class="block mb-2 text-sm font-medium text-slate-700 dark:text-white">Menü Adı</label>
                            <input asp-for="FoodTitle" class="w-full px-3 py-2 border rounded-lg shadow-sm dark:bg-slate-800 dark:text-white" placeholder="Menü adını giriniz" />
                            <span asp-validation-for="FoodTitle" class="text-red-500 text-sm"></span>
                        </div>

                        <!-- Fiyat -->
                        <div>
                            <label asp-for="FoodPrice" class="block mb-2 text-sm font-medium text-slate-700 dark:text-white">Fiyat (₺)</label>
                            <input asp-for="FoodPrice" type="number" step="0.01" class="w-full px-3 py-2 border rounded-lg shadow-sm dark:bg-slate-800 dark:text-white" placeholder="Fiyatı giriniz" />
                            <span asp-validation-for="FoodPrice" class="text-red-500 text-sm"></span>
                        </div>

                        <!-- Açıklama -->
                        <div>
                            <label asp-for="FoodDescription" class="block mb-2 text-sm font-medium text-slate-700 dark:text-white">Açıklama</label>
                            <textarea asp-for="FoodDescription" rows="4" class="w-full px-3 py-2 border rounded-lg shadow-sm dark:bg-slate-800 dark:text-white" placeholder="Açıklama giriniz"></textarea>
                            <span asp-validation-for="FoodDescription" class="text-red-500 text-sm"></span>
                        </div>

                        <!-- Resim URL -->
                        <div>
                            <label asp-for="FoodImageUrl" class="block mb-2 text-sm font-medium text-slate-700 dark:text-white">Resim URL</label>
                            <input asp-for="FoodImageUrl" class="w-full px-3 py-2 border rounded-lg shadow-sm dark:bg-slate-800 dark:text-white" placeholder="https://..." />
                            <span asp-validation-for="FoodImageUrl" class="text-red-500 text-sm"></span>
                        </div>

                        <!-- Kategori Seçimi -->
                        <div>
                            <label asp-for="MenuCategoryId" class="block mb-2 text-sm font-medium text-slate-700 dark:text-white">Kategori</label>
                            <select asp-for="MenuCategoryId" asp-items="ViewBag.Category" class="w-full px-3 py-2 border rounded-lg shadow-sm dark:bg-slate-800 dark:text-white">
                                <option value="">-- Kategori Seçin --</option>
                            </select>
                            <span asp-validation-for="MenuCategoryId" class="text-red-500 text-sm"></span>
                        </div>

                        <!-- Submit / Cancel -->
                        <div class="flex justify-end space-x-2 mt-6">
                            <a href="/Menu/Index" class="px-4 py-2 text-sm font-semibold text-slate-600 dark:text-white border rounded-lg">İptal</a>
                            <button type="submit" class="px-4 py-2 text-sm font-semibold text-white bg-gradient-to-r from-emerald-500 to-teal-400 rounded-lg shadow-md hover:opacity-90">Kaydet</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>