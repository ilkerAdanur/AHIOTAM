@*_DefaultSectionOfferComponentPartial*@
@model List<ResultMenuDto>
<section class="site-section bg-light" id="section-offer">
    <div class="container">

        <div class="row">
            <div class="col-md-12 text-center mb-5 site-animate">
                <h4 class="site-sub-title">Özel Menülerimiz</h4>
                <h2 class="display-4">Bu Yazki Önerilerimiz</h2>
                <div class="row justify-content-center">
                    <div class="col-md-7">
                        <p class="lead">Lezzet dolu anlar sizi bekliyor </p>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="owl-carousel site-owl ">
                    @foreach (var item in Model)
                    {
                        @if (item.SpicealMenu == true && item.MenuStatus ==true )
                        {
                            <div class="item">
                                <div class="media d-block mb-4 text-center site-media site-animate border-0">

                                    <!-- RESİM KAPSAYICI -->
                                    <div class="image-wrapper mx-auto mb-3">
                                        <img src="@item.FoodImageUrl" class="img-fluid" alt="@item.FoodTitle">
                                    </div>

                                    <div class="media-body p-md-5 p-4">
                                        <h5 class="text-primary">₺@item.FoodPrice</h5>
                                        <h5 class="mt-0 h4">@item.FoodTitle</h5>
                                        <p class="mb-4">@item.FoodDescription</p>
                                        <p class="mb-0"><a href="#" class="btn btn-primary btn-sm">Order Now!</a></p>
                                    </div>
                                </div>
                            </div>

                        }
                    }
                </div>
            </div>
        </div>
    </div>
</section>


                                        <style>
    .image-wrapper {
        width: 100%;
        max-width: 300px; /* isteğe göre büyüt/küçült */
        height: 200px;
        overflow: hidden;
        border-radius: 10px; /* opsiyonel köşe yumuşatma */
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #f8f8f8; /* resim yüklenmese bile boş görünmesin */
    }

        .image-wrapper img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

                                        </style>