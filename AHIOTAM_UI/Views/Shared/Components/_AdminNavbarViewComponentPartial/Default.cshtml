<script>
    document.addEventListener("DOMContentLoaded", function () {
        // --- Bildirimleri Yükleme Fonksiyonu ---
        async function loadNotifications() {
            const notificationList = document.getElementById('notification-list');
            const notificationBadge = document.getElementById('notification-badge');

            // Geçici veriler
            const notifications = [
                { title: 'Yeni Mesajınız Var', timeAgo: '3 dk önce' },
                { title: 'Haftalık Rapor Hazır', timeAgo: '10 dk önce' },
                { title: 'Sistem Güncellemesi', timeAgo: '25 dk önce' },
            ];

            notificationList.innerHTML = ''; // Listeyi temizle

            if (notifications.length > 0) {
                notificationBadge.textContent = notifications.length;
                notificationBadge.style.display = 'block';

                notifications.forEach(n => {
                    const item = `
                        <li class="mb-1">
                            <a class="dropdown-item d-flex align-items-start gap-2 border-radius-md" href="#">
                                <i class="fa-solid fa-circle text-primary mt-1" style="font-size:8px;"></i>
                                <div>
                                    <div class="fw-semibold text-dark">${n.title}</div>
                                    <small class="text-secondary"><i class="fa-regular fa-clock me-1"></i>${n.timeAgo}</small>
                                </div>
                            </a>
                        </li>`;
                    notificationList.insertAdjacentHTML('beforeend', item);
                    });
            } else {
                notificationBadge.style.display = 'none';
                notificationList.innerHTML = '<li><a class="dropdown-item text-center text-muted">Yeni bildirim yok</a></li>';
            }
        }

        // loadNotifications();
        // setInterval(loadNotifications, 60000); // 60 saniyede bir yenilemek isterseniz aktif edin.


        // --- Argon Sidebar Tetikleyicisini Bootstrap Mobil İkonuna Bağlama ---
        // Bu kod, Bootstrap navbar'ın mobil ikonuna tıklandığında Argon sidebar'ını açar.
        const argonSidebarToggler = document.querySelector('[sidenav-trigger]');
        const bootstrapMobileToggler = document.getElementById('iconNavbarSidenav');

        if (bootstrapMobileToggler && argonSidebarToggler) {
            bootstrapMobileToggler.addEventListener('click', function() {
                argonSidebarToggler.click(); // Orijinal Argon butonunun tıklama olayını taklit et
            });
        }
    });
</script>